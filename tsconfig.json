{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/restaurant-data": [
        "libs/restaurant-data/src"
      ],
      "@app/restaurant-data/*": [
        "libs/restaurant-data/src/*"
      ],
      "@app/const": [
        "libs/const/src"
      ],
      "@app/const/*": [
        "libs/const/src/*"
      ],
      "@app/auth": [
        "libs/auth/src"
      ],
      "@app/auth/*": [
        "libs/auth/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}