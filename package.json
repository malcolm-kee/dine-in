{
  "name": "dine-in",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:apps && npm run build:scripts",
    "build:apps": "nest build && nest build queue",
    "build:scripts": "webpack --config scripts/webpack.config.js",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:queue:dev": "nest start queue --watch",
    "start:debug": "nest start --debug --watch",
    "start:scripts": "node dist/scripts/socket",
    "start:prod": "node dist/apps/dine-in/main",
    "start:queue:prod": "node dist/apps/queue/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/microservices": "^7.0.3",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.4.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "mongoose": "^5.9.5",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "slug": "^2.1.1",
    "swagger-ui-express": "^4.1.3",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/mongoose": "^5.7.6",
    "@types/node": "^13.9.1",
    "@types/redis": "^2.8.16",
    "@types/slug": "^0.9.1",
    "@types/supertest": "^2.0.8",
    "@types/ws": "^7.2.3",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "@app/restaurant-data/(.*)": "<rootDir>/libs/restaurant-data/src/$1",
      "@app/restaurant-data": "<rootDir>/libs/restaurant-data/src",
      "@app/const/(.*)": "<rootDir>/libs/const/src/$1",
      "@app/const": "<rootDir>/libs/const/src"
    }
  }
}