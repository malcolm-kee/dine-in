{
  "name": "dine-in",
  "version": "0.0.1",
  "description": "Web service for restaurant seating management system.",
  "author": "Malcolm Kee <malcolm.keeweesiong@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:apps",
    "build:apps": "nest build && nest build queue && nest build socket",
    "build:rest": "nest build",
    "build:queue": "nest build queue",
    "build:socket": "nest build socket",
    "start": "concurrently \"npm:start:rest:dev\" \"npm:start:queue:dev\" \"npm:start:socket:dev\"",
    "start:rest:dev": "nest start --watch",
    "start:queue:dev": "nest start queue --watch",
    "start:socket:dev": "nest start socket --watch",
    "start:rest:prod": "node dist/apps/dine-in/main",
    "start:queue:prod": "node dist/apps/queue/main",
    "start:socket:prod": "node dist/apps/socket/main",
    "test": "jest",
    "test:e2e": "jest --config ./jest-e2e.js --runInBand --forceExit --coverage",
    "test:real": "jest --config ./jest-real.js --runInBand",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "heroku-postbuild": "sh build-app.sh"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/microservices": "^7.0.3",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/platform-ws": "^7.0.8",
    "@nestjs/swagger": "^4.4.0",
    "@nestjs/websockets": "^7.0.8",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.1",
    "dotenv": "^8.2.0",
    "mongoose": "^5.9.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "slug": "^4.0.2",
    "swagger-ui-express": "^4.1.3",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^26.0.4",
    "@types/mongoose": "^5.7.6",
    "@types/node": "^13.9.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/redis": "^2.8.16",
    "@types/slug": "^0.9.1",
    "@types/supertest": "^2.0.8",
    "@types/ws": "^7.2.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^26.1.0",
    "mongodb-memory-server": "^6.5.2",
    "prettier": "^2.0.4",
    "supertest": "^5.0.0",
    "ts-jest": "^26.1.1",
    "ts-loader": "^8.0.0",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "@app/restaurant-data/(.*)": "<rootDir>/libs/restaurant-data/src/$1",
      "@app/restaurant-data": "<rootDir>/libs/restaurant-data/src",
      "@app/const/(.*)": "<rootDir>/libs/const/src/$1",
      "@app/const": "<rootDir>/libs/const/src",
      "@app/auth/(.*)": "<rootDir>/libs/auth/src/$1",
      "@app/auth": "<rootDir>/libs/auth/src",
      "@app/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@app/logger": "<rootDir>/libs/logger/src"
    }
  }
}
